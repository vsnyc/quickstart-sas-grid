                                "echo 'exec 1>/tmp/mount.log 2>&1' >> /opt/signal.sh \n",
                                "echo \"date\" >> /opt/signal.sh \n",
                                "echo \"sleep 60\" >> /opt/signal.sh \n",
                                "echo 'MOUNT=",
