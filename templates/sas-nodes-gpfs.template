            "Type": "AWS::EC2::KeyPair::KeyName"
        },
        "SASGridInstanceType": {
            "Type": "String",
            "Default": "i3.8xlarge",
            "AllowedValues": [
                "i3.4xlarge",
                "i3.8xlarge"
            ]
